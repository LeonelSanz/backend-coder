<h1>Listado de productos</h1>
<div>
  {{#if productos.[0]}}
  <div class="container">
    {{#each productos}}
          <article>
            <img src="{{this.thumbnail}}" alt="{{this.title}}">
            <h2>{{this.title}}</h2>
            <span>${{this.price}}</span>
          </article>
        {{/each}}
  </div>
  {{else}}
  <h2>No hay productos disponibles para mostrar</h2>
  {{/if}}
</div>
<a href="/"><button class="btn btn-outline-secondary w-50 mt-4 position-absolute translate-middle start-50">AGREGAR
    PRODUCTO</button></a>